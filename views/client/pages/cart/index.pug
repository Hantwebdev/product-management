extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug
include ../../mixins/cart-empty.pug

block main
    //- +alert-success(5000)
    //- +alert-error(5000)

    .container.my-3
        .row
            .col-12
                +box-head("Giỏ hàng")


        .row
            .col-12
                if(cartDetail.products.length > 0)
                    table(class="table table-bordered text-center align-middle")
                        thead
                            tr
                            th STT
                            th Ảnh
                            th Tên
                            th Giá
                            th Số lượng
                            th Tổng tiền
                            th Hành động
                        tbody
                            each item, index in cartDetail.products
                                tr
                                    td #{index + 1}
                                    td
                                        img(src=item.productInfo.thumbnail, alt=item.productInfo.title width="80px")
                                    td
                                        a(
                                            href=`/products/detail/${item.productInfo.slug}`
                                            class = "cart-product"
                                        ) #{item.productInfo.title}
                                    td #{item.productInfo.priceNew.toLocaleString()}₫
                                    //- td
                                    //-     input(
                                    //-         type="number"
                                    //-         name="quantity"
                                    //-         value=item.quantity
                                    //-         min="1"
                                    //-         product-id=item.product_id
                                    //-         style="width: 60px"
                                    //-     )
                                    td
                                        div(class="select-item-qty")
                                            span(class="reduce-btn")
                                                <i class="fa-solid fa-minus"></i>
                                            input(
                                                type="number"
                                                name="quantity"
                                                value=item.quantity
                                                min="1"
                                                product-id=item.product_id
                                                style="width: 50px"
                                            )
                                            span(class="plus-btn") 
                                                <i class="fa-solid fa-plus"></i>
                                    td #{item.totalPrice.toLocaleString()}₫
                                    td
                                        a(
                                            href=`/cart/delete/${item.product_id}`
                                            class="btn btn-danger"
                                        ) Xóa

                    h3(class="text-end") Tổng đơn hàng: #{cartDetail.totalPrice.toLocaleString()}₫

                    div(class="text-end mt-3")
                        a(href="/checkout" class="btn btn-success") Thanh toán ngay

                else 
                    +cart-empty
                    
    form(
        action="" 
        method="GET"
        id="form-update-quantity"
    ) 
    
    script(src="/js/cart.js") 