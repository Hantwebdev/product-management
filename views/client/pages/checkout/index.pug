extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)
    +alert-error(5000)

    .container.my-3
        .row
            .col-12
                +box-head("Đặt hàng")

        .row
            .col-12
                table(class="table table-bordered text-center align-middle")
                    thead
                        tr
                        th STT
                        th Ảnh
                        th Tên
                        th Giá
                        th Số lượng
                        th Tổng tiền
                    tbody
                        if(cartDetail.products.length > 0)
                            each item, index in cartDetail.products
                                tr
                                td #{index + 1}
                                td
                                    img(
                                        src=item.productInfo.thumbnail
                                        alt=item.productInfo.title
                                        width="80px"
                                    )
                                td #{item.productInfo.title}
                                td #{item.productInfo.priceNew.toLocaleString()}₫
                                td #{item.quantity}
                                td #{item.totalPrice.toLocaleString()}₫
                        else
                            tr
                                td(
                                    colspan="7"
                                    class="text-center"
                                ) Giỏ hàng trống.
                if(cartDetail.products.length > 0)
                    h3(class="text-end") Tổng đơn hàng: #{cartDetail.totalPrice.toLocaleString()}₫

    if(cartDetail.products.length > 0)
        .row(class="pb-5 pt-4" style="background: #FF7F00")
            .col-12 
                .container
                    .card.p-4.my-4
                        form(
                            action="/checkout/order"
                            method="POST"
                            class="checkout-detail"
                        )
                            div(class="checkout-title") Thông tin nhận hàng
                            div(class="form-group mb-1 ")
                                label(for="fullName") 
                                input(
                                    type="text"
                                    class="form-control"
                                    id="fullName"
                                    name="fullName"
                                    placeholder="Họ và tên *"
                                    required
                                ) 
                            div(class="form-group mb-1")
                                label(for="phone") 
                                input(
                                    type="text"
                                    class="form-control"
                                    id="phone"
                                    name="phone"
                                    placeholder="Số điện thoại *"
                                    required
                                )
                            div(class="form-group")
                                label(for="address") 
                                input(
                                    type="text"
                                    class="form-control"
                                    id="address"
                                    name="address"
                                    placeholder="Địa chỉ *"
                                    required
                                )
                            div(class="form-group text-center mt-3")
                                button(
                                    type="submit"
                                    class="btn btn-success checkout-btn"
                                ) Đặt hàng       