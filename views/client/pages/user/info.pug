extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)
    +alert-error(5000)

    .container.my-3
        .row.block-profile
            .col-3
                .block-menu
                    .title-account TRANG TÀI KHOẢN
                    p Xin chào, 
                        span(class="name-user") #{user.fullName} !
                    ul 
                        li(class="title-info")
                            a(href="/user/account") Thông tin tài khoản
                        li(class="title-info")
                            a(href=`/user/edit/${user.id}`) Cập nhật tài khoản
                        li(class="title-info")
                            a(href=`/user/order/${user.id}`) Đơn hàng của bạn
                        li(class="title-info")
                            a(href=`/user/info/${user.id}`) Sổ địa chỉ
                        li(class="title-info")
                            a(href="/user/password/change") Đổi mật khẩu

            .col-9
                .row.justify-content-center
                    .col-11.form-fill
                        .block-info.mb-4
                            .title-account(style="text-align: center") SỔ ĐỊA CHỈ
                            form(
                                action=`/user/info/${user.id}?_method=PATCH`
                                method="POST"
                            )
                                div(class="form-group mb-3")
                                    label(for="fullName") Họ tên
                                        span(class="required") *
                                    input(
                                        type="text"
                                        class="form-control"
                                        id="fullName"
                                        name="fullName"
                                        required
                                        value=user.fullName
                                    ) 
                                div(class="form-group mb-3")
                                    label(for="phone") Số điện thoại
                                        span(class="required") *
                                    input(
                                        type="text"
                                        class="form-control"
                                        id="phone"
                                        name="phone"
                                        required
                                        value=user.info.phone
                                    )
                                div(class="form-group mb-3 ")
                                    label(for="address") Địa chỉ
                                        span(class="required") *
                                    input(
                                        type="text"
                                        class="form-control"
                                        id="address"
                                        name="address"
                                        required
                                        value=user.info.address
                                    )
                                div(class="form-group")
                                    label(for="province") Tỉnh/ Thành phố
                                        span(class="required") *
                                    input(
                                        type="text"
                                        class="form-control"
                                        id="province"
                                        name="province"
                                        required
                                        value=user.info.province
                                    )
                                
                                div(
                                    class="form-group"
                                    style="display: flex; justify-content: center; margin-top:0px"
                                )
                                    button(
                                        type="submit"
                                        class="btn btn-primary"
                                        style="padding: 8px 70px"
                                    ) Cập nhật
    script(src="/js/script.js") 