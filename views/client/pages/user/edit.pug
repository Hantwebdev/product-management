extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    h1(class="mb-4") Cập nhật tài khoản

    +alert-success(5000)
    +alert-error(5000)

    form(
        action=`/user/edit/${data.id}?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="fullName") Họ tên *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
                value=data.fullName
            ) 
        div(class="form-group")
            label(for="email") Email *
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
                value=data.email
            )
        div(
            class="form-group"
            upload-image
        )
            label(for="avatar") Avatar
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
                src=data.avatar
                class="image-preview"
                upload-image-preview
            )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
        
