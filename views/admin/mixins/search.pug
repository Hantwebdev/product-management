mixin search(keyword)
    form(id="form-search")
        .input-group 
            input(
                    type="text"
                    placeholder="Nhập từ khoá..."
                    name="keyword"
                    class="form-control"
                    value=keyword
                )
            .input-group-append 
                button(
                    class="btn"
                    type="submit"
                ) 
                    <i class="fa-solid fa-magnifying-glass"></i>