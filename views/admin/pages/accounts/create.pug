extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    if(role.permissions.includes("accounts_create"))
        div(class="title-heading") Thêm mới tài khoản

        +alert-error(5000)

        form(
            action=`${prefixAdmin}/accounts/create`
            method="POST"
            enctype="multipart/form-data"
            class="edit-common"
        )
            div(class="form-group")
                label(for="fullName") Họ tên *
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    required
                )
            div(class="form-group")
                label(for="email") Email *
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                )
            div(class="form-group")
                label(for="password") Mật khẩu *
                input(
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    required
                )
            div(class="form-group")
                label(for="phone") Số điện thoại
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                )
            div(
                class="form-group mt-4"
                upload-image
                )
                label(for="avatar") Avatar
                input(
                    type="file"
                    class="form-control-file ms-4"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                img(
                    src=""
                    class="image-preview ms-3"
                    upload-image-preview
                )
            div(class="form-group mb-4")
                label(for="role_id") Phân quyền
                select(name="role_id" id="role_id" class="form-control form-select mt-1")
                    option(disabled) -- Chọn --
                    each item in roles
                        option(value=item.id) #{item.title}
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked
                )
                label(for="statusActive" class="form-check-label") Hoạt động
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                )
                label(for="statusInActive" class="form-check-label") Dừng hoạt động
            div(class="form-group mt-4")
                a(
                    href=`${prefixAdmin}/accounts`
                    class="btn btn-back me-4"
                ) <i class="fa-solid fa-arrow-left"></i> Quay lại

                button(
                    type="submit"
                    class="btn btn-update"
                ) Tạo mới