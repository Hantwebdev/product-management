extends ../../layouts/default.pug
include ../../mixins/customer-policy.pug

block main 
    .product-detail
        .container.my-4
            .row
                .col-5
                    .inner-thumb
                        img(src=product.thumbnail, alt=product.title)
                .col-7.ps-4
                    h3(class="inner-title") #{product.title}

                    div(class="inner-category")
                        span Danh mục: #{category.title}

                    span(class="inner-price-new") #{product.priceDiscount.toLocaleString()}₫


                    if (product.price)
                        span(class="inner-price-old ms-3") #{product.price.toLocaleString()}₫

                    span(class="inner-percent") -#{product.discountPercentage}%

                    if (product.stock)
                        div(class="inner-stock") Còn lại: #{product.stock} sản phẩm

                    if (product.position)
                        div(class="inner-position") Vị trí: #{product.position}

                    if (product.status)
                        div(class="inner-status")
                            if(product.status == "active")
                                | Trạng thái: Hoạt động
                            else
                                | Trạng thái: Dừng hoạt động

                    
                    div(class="accordion-list")
                        div(class="accordion")
                            div(class="accordion-header")
                                div Mô tả sản phẩm
                                div(class="accordion-icon")
                                    <i class="fa-solid fa-angle-down icon"></i>
                            div(class="accordion-content")
                                div(class="accordion-inner") !{product.description}

                        div(class="accordion")
                            div(class="accordion-header")
                                div Chính sách khách hàng
                                div(class="accordion-icon")
                                    <i class="fa-solid fa-angle-down icon"></i>
                            div(class="accordion-content accordion-content-img")
                                div(class="accordion-inner accordion-img") 
                                    img(src="/admin/images/chinh-sach-khach-hang-web.jpg" alt="Chính sách khách hàng")
                        
                        div(class="accordion")
                            div(class="accordion-header")
                                div Chính sách kiểm hàng
                                div(class="accordion-icon")
                                    <i class="fa-solid fa-angle-down icon"></i>
                            div(class="accordion-content")
                                div(class="accordion-inner") 
                                    +customer-policy
                                
                    a(
                        href=`${prefixAdmin}/products`
                        class="btn btn-back mt-4"
                    ) <i class="fa-solid fa-arrow-left"></i> Quay lại
                    
    
    script(src="/admin/js/product.js") 